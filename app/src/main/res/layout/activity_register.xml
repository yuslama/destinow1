<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:backgroundTint="@color/cardview_light_background">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/logo"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="55dp"
      android:id="@+id/login_logo"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/login_logo"
      android:layout_marginTop="43dp"
      android:layout_marginLeft="61dp"
      android:layout_marginBottom="-10dp"
      android:text="NAMA LENGKAP"
      android:fontFamily="@font/poppinsmedium"
      android:textSize="13sp"
      android:textColor="@color/blue_old"
      android:id="@+id/text_name"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_below="@id/text_name"
      android:paddingLeft="61dp"
      android:paddingRight="61dp"
      android:id="@+id/layout_name">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/input_shape"
        android:hint="Masukkan nama lengkap Anda"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:id="@+id/input_name"/>
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/layout_name"
      android:layout_marginTop="18dp"
      android:layout_marginLeft="61dp"
      android:layout_marginBottom="-10dp"
      android:text="EMAIL"
      android:fontFamily="@font/poppinsmedium"
      android:textSize="13sp"
      android:textColor="@color/blue_old"
      android:id="@+id/text_email"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_below="@id/text_email"
      android:paddingLeft="61dp"
      android:paddingRight="61dp"
      android:id="@+id/layout_email">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/input_shape"
        android:hint="Masukkan email Anda"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:id="@+id/input_email"/>
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/layout_email"
      android:layout_marginTop="18dp"
      android:layout_marginLeft="61dp"
      android:layout_marginBottom="-10dp"
      android:text="PASSWORD"
      android:fontFamily="@font/poppinsmedium"
      android:textSize="13sp"
      android:textColor="@color/blue_old"
      android:id="@+id/text_pass"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_below="@id/text_pass"
      android:paddingLeft="61dp"
      android:paddingRight="61dp"
      android:id="@+id/layout_pass">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/input_shape"
        android:fontFamily="@font/poppinsmedium"
        android:hint="Masukkan password Anda"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:id="@+id/input_pass"/>

  </com.google.android.material.textfield.TextInputLayout>

  <ProgressBar
    android:id="@+id/progress_bar"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/layout_pass"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="61dp"
        android:hint="Kirim"
        android:textColorHint="@color/white"
        android:fontFamily="@font/inter_bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/btn_regist"/>

  <TextView
      android:id="@+id/login"
      android:layout_width="match_parent"
      android:layout_height="18dp"
      android:layout_marginTop="12dp"
      android:layout_below="@id/btn_regist"
      android:hint="Sudah punya akun?"
      android:textColorHint="@color/blue_old"
      android:fontFamily="@font/inter_medium"
      android:textSize="12sp"
      android:textAlignment="center"/>


</RelativeLayout>