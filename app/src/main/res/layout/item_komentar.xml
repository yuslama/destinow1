<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/nama_komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moh.Yuslam"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="#373737"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:background="@drawable/bordernyata_ungu"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textkomentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Pemandangan laut yang memukau dan keindahan alam bawah lautnya benar-benar menghipnotis. "
            android:textColor="#4E4E4E"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gmabrkomentar1"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/liburan"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>