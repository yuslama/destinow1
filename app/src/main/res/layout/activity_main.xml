<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:backgroundTint="@color/cardview_light_background">

    <RelativeLayout
        android:id="@+id/llhalo"
        android:layout_width="332dp"
        android:layout_height="101dp"
        android:layout_marginTop="51dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/user_halo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:paddingLeft="32dp"
            android:paddingTop="24dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/user_halo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_halo"
            android:fontFamily="@font/inter_medium"
            android:paddingLeft="32dp"
            android:paddingTop="9dp"
            android:text="Mau pergi kemana hari ini? "
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/pp"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/user_halo2"
            android:src="@drawable/pp">

        </ImageView>


        <ImageView
            android:id="@+id/detailImage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l2lhalo"
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/inter_bold"
            android:hint="logout"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>







</RelativeLayout>